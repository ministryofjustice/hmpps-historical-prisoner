{% extends "../partials/pdfLayout.njk" %}

{% set pageTitle = "Details" %}

{% set mainClasses = "app-container govuk-body" %}
{% set bodyAttributes = {'data-page': 'detail'} %}

{% block content %}
  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-three-quarters">
      <h1>{{ firstName | title }} {{ middleName | title }} {{ lastName }}</h1>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters hmpps-profile--personal-content hmpps-full-width-print">
      {% if summary %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/summary.njk" %}
          </div>
        </div>
      {% endif %}
      {% if sentenceSummary %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/sentenceSummary.njk" %}
          </div>
        </div>
      {% endif %}
      {% if sentencing %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/sentencing.njk" %}
          </div>
        </div>
      {% endif %}
      {% if courtHearings %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/courtHearings.njk" %}
          </div>
        </div>
      {% endif %}
      {% if movements %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/movements.njk" %}
          </div>
        </div>
      {% endif %}
      {% if (hdcInfo or hdcRecall) %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/hdc.njk" %}
          </div>
        </div>
      {% endif %}
      {% if offences %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/offences.njk" %}
          </div>
        </div>
      {% endif %}
      {% if offencesInCustody %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/offencesInCustody.njk" %}
          </div>
        </div>
      {% endif %}
      {% if aliases %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/aliases.njk" %}
          </div>
        </div>
      {% endif %}
      {% if addresses %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            {% include "../partials/detail/addresses.njk" %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
